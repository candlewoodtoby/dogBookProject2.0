<%= provide(:title, @user.name) %>

<div class="container">
    <div class="row">
      <aside class="col-md-=4">
        <section class="user_info">
          <h1>
            <%= gravatar_for @user %>
            <%= @user.name %>

          </h1>
        </section>
      </aside>
    </div>

    <div class="row center">
      <%= link_to "Add New Dog", new_user_dog_path(@user), class: "btn btn-lg btn-success" %>

    </div>

    <div class="dogs center">
      <h3> Your Dogs: </h3>
      <ul>
        <% @dog.each do |dog| %>
          <li><%= link_to dog.name, user_dog_path(@user, dog) %></li><br>
        <% end %>
      </ul>
    </div>
</div>
